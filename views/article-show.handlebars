<a href="/">Back to Home</a>
<div class="row">
    <div class="input-field col s4 m6" style="width: 19.333333%; margin-left: 43px;">
        <h2>Category: {{article.category}}</h2>
        <div class="row">
            <div class="input-field col s5" style="clear:both">
                <h3><b>Article Name: {{article.articleName}}</b></h3>
                <p>
                    <small>Content: {{article.content}}</small>
                </p>

                <p>
                    Comments:   {{article.comments}}
                </p>
            </div>
        </div>
    </div>
     </div>
<div class="row">
    <form class="col s9" action="/article/{{article._id}}/comments">
        <a class="btn btn-floating btn-large cyan pulse" style="clear: both"><i class="material-icons">edit</i></a>
        <div class="row">
            <textarea id="textare1" class='materialize-textarea' name="body" placeholder="Comment"
                      style="both:clear;"></textarea>
        </div>
        <div class="text-right">
            <button class="btn waves-effect waves-light" type="submit">Submit
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
</div>

